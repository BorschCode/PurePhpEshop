{
    "name": "purephpmarket/shop",
    "description": "Pure PHP Market - E-commerce application built with PHP 8.4",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.4"
    },
    "autoload": {
        "psr-4": {
            "App\\Controllers\\": "controllers/",
            "App\\Models\\": "models/",
            "App\\Core\\": "function/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
